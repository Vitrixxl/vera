{
  "name": "vera",
  "module": "index.ts",
  "overrides": {
    "picomatch": "2.3.1"
  },
  "private": true,
  "scripts": {
    "dev:front": "bun --cwd frontend start --host",
    "dev:back": "bun --cwd backend dev --host",
    "dev": "concurrently --names \"backend,frontend\" --prefix-colors \"blue,magenta\" \"bun run dev:back\" \"bun run dev:front\"",
    "build:front": "bun --cwd electron build",
    "shadcn": "bunx --bun --cwd electron shadcn@latest",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio"
  },
  "type": "module",
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ]
}
