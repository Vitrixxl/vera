{
  "name": "chessinator",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:front": "cd electron  && npm run dev",
    "dev:back": "bun --cwd backend dev",
    "dev:game": "bun --cwd frontend dev",
    "dev": "parallel --line-buffer --tag ::: \"bun run dev:back\"  \"bun run dev:front\"",
    "build:front": "bun --cwd electron build",
    "shadcn": "bunx --bun --cwd electron shadcn@latest",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio"
  },
  "overrides": {
    "picomatch": "2.3.1"
  }
}
